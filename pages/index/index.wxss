.index{
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}
swiper{
  height: 13rem;
}
swiper-item{
  text-align: center;
  width: 100%;
}
swiper-item image{
  width: 100%
}
.box{

  display: inline-block;

  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2;
  position:relative;
  transform:translateY(-45%);
}
.bb{
  vertical-align: middle;
  width: 25%;
  height: 2rem;
  margin: 0 auto;
}
.sear{
  
  border: 1px solid gainsboro;
  height: 2.3rem;
  border-radius: .5rem;
  width: 70%;
}
.font{
